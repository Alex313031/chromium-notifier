{
  "author": "Alex313031 <Alex313031@gmail.com>",
  "homepage_url": "https://github.com/Alex313031/chromium-notifier",
  "manifest_version": 3,
  "name": "Chromium Update Notifications",
  "short_name": "Chromium Notifications",
  "version": "1.9.1",
  "version_name": "1.9.1",
  "minimum_chrome_version": "88",
  "background": {
	"type": "module",
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon_16.png",
      "24": "img/icon_24.png",
      "32": "img/icon_32.png",
      "48": "img/icon_48.png",
      "64": "img/icon_64.png",
      "128": "img/icon_128.png",
      "256": "img/icon_256.png"
    }
  },
  "description": "Chromium browser extension that provides browser and extensions update notifications and extensions management functionality. Chromium versions are synced with Woolyss' Website.",
  "icons": {
    "16": "img/icon_16.png",
    "24": "img/icon_24.png",
    "32": "img/icon_32.png",
    "48": "img/icon_48.png",
    "64": "img/icon_64.png",
    "128": "img/icon_128.png",
    "256": "img/icon_256.png"
  },
  "permissions": [ "alarms", "management", "storage" ],
  "host_permissions": [ "*://clients2.google.com/service/*" ]
}
